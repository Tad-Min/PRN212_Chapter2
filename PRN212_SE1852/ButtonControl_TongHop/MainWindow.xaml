<Window x:Class="ButtonControl_TongHop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ButtonControl_TongHop"
        mc:Ignorable="d"
        Title="Sum 2 Number" Height="200" Width="300">
    <StackPanel>
        <Label Target="{Binding ElementName=txtA}">
            Number _a
        </Label>
        <TextBox Name="txtA">0</TextBox>
        <Label Target="{Binding ElementName=txtB}">
            Number _b
        </Label>
        <TextBox Name="txtB">0</TextBox>
        <TextBlock>Result: </TextBlock>
        <TextBlock Name="tbKetQua" Background="Yellow"></TextBlock>
        <StackPanel Orientation="Horizontal">
            <Button Name="btnTong" Width="100" Margin="10"
                    Click="BtnTong_Click">
                <StackPanel Orientation="Horizontal">
                    <Image></Image>
                    <TextBlock Margin="5">Sum</TextBlock>
                </StackPanel>
            </Button>
            <Button Name="btnThoat" Width="100" Margin="10"
                    Click="btnThoat_Click">
                <StackPanel Orientation="Horizontal">
                    <Image></Image>
                    <TextBlock>Exit</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
